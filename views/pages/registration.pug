extends ../layout

block content
  .container
    .row
      .span12
        form.form-horizontal(action='/registrationForm', method='POST')
          fieldset
            #legend
              legend Registration
            .control-group
              // Username
              label.control-label(for='username') Username
              .controls
                input#username.input-xlarge(type='text', name='newUsername', placeholder='Create an Username')
            .control-group
              // Password
              label.control-label(for='password') Password
              .controls
                input#password.input-xlarge(type='password', name='newPassword', placeholder='Create a Password')
            .control-group
              // Button
              .controls
                button.btn.btn-success Sign-Up
        a(href="/logout") Go Back