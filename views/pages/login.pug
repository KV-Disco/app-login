extends ../layout

block content
  .container
    .row
      .span12
        form.form-horizontal(action='/loginForm', method='POST')
          fieldset
            #legend
              legend Login
            .control-group
              // Username
              label.control-label(for='username') Username
              .controls
                input#username.input-xlarge(type='text', name='username', placeholder='Username')
            .control-group
              // Password
              label.control-label(for='password') Password
              .controls
                input#password.input-xlarge(type='password', name='password', placeholder='Password')
            .control-group
              // Button
              .controls
                button.btn.btn-success Login
        a(href='/sign-up') Sign-Up
